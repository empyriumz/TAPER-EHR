{
    "name": "mortality-code",
    "n_gpu": 1,
    
    "model": {
        "type": "Seq_Attention",
        "module_name": "seq_model",
        "args": { 
            "transformer_state_path": "saved/sequence_code_training_0/1227_202156/model_best.pth",
            "num_classes": 1,
            "demographics": true,
            "demographics_size": 54,
            "div_factor": 2,
            "codes": true 
        }
    },
    "data_loader": {
        "type": "SeqClassificationDataLoader",
        "args": {
            "data_dir": "./data/output",
            "y_label": "mortality",
            "batch_size": 32,
            "shuffle": true,
            "seed": 20,
            "validation_split": 0.1,
            "num_workers": 4,
            "med": false,
            "cptcode": false,
            "proc": true,
            "diag": true
        }
    },
    "do_roc_metrics": true,
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "accuracy",
        "sensitivity",
        "specificity",
        "precision",
        "pr_auc",
        "roc_auc"
     ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "ClassificationTrainer",
        "module_name": "classification_trainer",
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2000,
        "log_step": 1000,
        "class_weight_0": 0.5,
        "class_weight_1": 1.0,
        "monitor": "max accuracy",
        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}
